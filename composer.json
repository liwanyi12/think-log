{
    "name": "lwi/thinklog",
    "description": "高性能日志组件 - 原生支持 PSR-3，可选 ThinkPHP 深度集成",
    "type": "library",
    "license": "MIT",
    "keywords": [
        "logging",
        "psr-3",
        "thinkphp",
        "asynchronous"
    ],
    "homepage": "https://github.com/liwanyi12/think-log",
    "support": {
        "issues": "https://github.com/liwanyi12/think-log/issues",
        "source": "https://github.com/liwanyi12/think-log"
    },
    "authors": [
        {
            "name": "李万义",
            "email": "3357702725@qq.com"
        }
    ],
    "require": {
        "php": "^7.3 || ^8.0"
    },
    "suggest": {
        "topthink/framework": "^6.0 || ^8.0 (Required for ThinkPHP integration)"
    },
    "autoload": {
        "psr-4": {
            "Lwi\\Thinklog\\": "src/"
        }

    },

    "scripts": {
        "post-install-cmd": [
            "Lwi\\Thinklog\\Installer::postInstall"
        ],
        "post-update-cmd": [
            "Lwi\\Thinklog\\Installer::postInstall"
        ],
        "test": "phpunit",
        "cs-check": "phpcs --standard=PSR12 src tests",
        "cs-fix": "phpcbf --standard=PSR12 src tests"
    },
    "extra": {
        "thinkphp": {
            "config": {
                "log_async": "config/log_async.php"
            },
            "services": [
                "Lwi\\Thinklog\\Service"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "platform-check": false
    }
}